{
  "name": "sliate-notice-system",
  "version": "1.3.0",
  "description": "SLIATE Notice System - Secure Notice Management Platform with Advanced Security Features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest tests/security/",
    "test:api": "jest tests/api/",
    "test:sql": "jest tests/security/sqlInjection.test.js",
    "test:xss": "jest tests/security/xss.test.js",
    "test:auth": "jest tests/security/auth.test.js tests/api/auth.test.js",
    "test:notices": "jest tests/api/notices.test.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:verbose": "jest --verbose",
    "lint": "eslint . tests/",
    "lint:fix": "eslint . tests/ --fix",
    "lint:security": "eslint . tests/ --config .eslintrc.security.js",
    "security:check": "npm audit && npm run lint:security",
    "build": "echo 'Build process - No build step required for Node.js'",
    "setup:dev": "npm install && npm run setup:env",
    "setup:env": "node scripts/setup-environment.js",
    "logs:clear": "node scripts/clear-logs.js",
    "security:scan": "npm audit --audit-level moderate",
    "db:migrate": "node database/migrate.js",
    "db:check": "echo 'Use your existing database scripts in database/'",
    "help": "echo 'Available commands: start, dev, test, setup:env, logs:clear, security:scan'"
  },
  "keywords": [
    "notice-system",
    "sliate",
    "secure",
    "nodejs",
    "express",
    "mysql",
    "jwt",
    "security",
    "authentication",
    "authorization",
    "file-upload",
    "analytics"
  ],
  "author": {
    "name": "J33WAKASUPUN",
    "email": "j33wakasupun@sliate.ac.lk",
    "url": "https://github.com/J33WAKASUPUN"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/J33WAKASUPUN/sliate-notice-system.git"
  },
  "bugs": {
    "url": "https://github.com/J33WAKASUPUN/sliate-notice-system/issues"
  },
  "homepage": "https://github.com/J33WAKASUPUN/sliate-notice-system#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^5.5.1",
    "express-session": "^1.18.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.25.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "mysql2": "^3.14.1",
    "redis": "^5.5.6",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "utils/**/*.js",
      "services/**/*.js",
      "config/**/*.js",
      "!server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 10000,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security",
      "import"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error",
      "security/detect-unsafe-regex": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "error",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-eval-with-expression": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-fs-filename": "error",
      "security/detect-non-literal-require": "error",
      "security/detect-possible-timing-attacks": "error",
      "security/detect-pseudoRandomBytes": "error",
      "import/no-dynamic-require": "error",
      "import/no-unresolved": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "node_modules/",
      "logs/",
      "uploads/",
      "database/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  },
  "config": {
    "nodeVersion": ">=18.0.0",
    "platform": "linux, darwin, win32"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/J33WAKASUPUN"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}
